#include <stdio.h>

struct Student {
    int id;
    int age;
    char name[30];
};

int main() {
    struct Student s[100];
    int n, i, j, choice;
    struct Student temp;

    printf("Enter number of students: ");
    scanf("%d", &n);
    for(i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i+1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Age: ");
        scanf("%d", &s[i].age);
        printf("Name: ");
        scanf("%s", s[i].name);
    }

    printf("\nSort students by:\n1. Age\n2. ID\nEnter your choice: ");
    scanf("%d", &choice);
    for(i = 0; i < n - 1; i++) {
        for(j = i + 1; j < n; j++) {

            if(choice == 1) {
                if(s[i].age > s[j].age) {
                    temp = s[i];
                    s[i] = s[j];
                    s[j] = temp;
                }
            }
            else if(choice == 2) {
                if(s[i].id > s[j].id) {
                    temp = s[i];
                    s[i] = s[j];
                    s[j] = temp;
                }
            }
        }
    }
    printf("\nSorted Student Records:\n");
    printf("ID\tAge\tName\n");
    for(i = 0; i < n; i++) {
        printf("%d\t%d\t%s\n", s[i].id, s[i].age, s[i].name);
    }

    return 0;
}
