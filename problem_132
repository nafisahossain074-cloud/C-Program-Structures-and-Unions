#include <stdio.h>

struct Student {
    int id;
    float marks;
    char name[30];
};

int main() {
    struct Student s1, s2;
    printf("Enter Student ID: ");
    scanf("%d", &s1.id);
    printf("Enter Student Marks: ");
    scanf("%f", &s1.marks);
    printf("Enter Student Name: ");
    scanf("%s", s1.name);
    FILE *f = fopen("student.dat", "wb");
    if (f == NULL) {
        printf("Error in opening file!");
        return 1;
    }
    fwrite(&s1, sizeof(s1), 1, f);
    fclose(f);
    f = fopen("student.dat", "rb");
    if (f == NULL) {
        printf("Error in opening file!");
        return 1;
    }
    fread(&s2, sizeof(s2), 1, f);
    fclose(f);
    printf("\nData retrieved from file:\n");
    printf("ID: %d\n", s2.id);
    printf("Marks: %.2f\n", s2.marks);
    printf("Name: %s\n", s2.name);

    return 0;
}
